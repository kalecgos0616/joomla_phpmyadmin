      </field>
      </fieldset>
      <fieldset name="other" label="Template Layout">
      <field name="templateWidth" type="text" default="980px" label="TBL_METIS_PARAMS_WIDTH" description="TBL_METIS_PARAMS_WIDTH_DESC"/>
      <field name="leftWidth" type="text" default="645px" label="TBL_METIS_PARAMS_LEFT_WIDTH" description="TBL_METIS_PARAMS_LEFT_WIDTH_DESC"/>
      <field name="rightWidth" type="text" default="310px" label="TBL_METIS_PARAMS_RIGHT_WIDTH" description="TBL_METIS_PARAMS_RIGHT_WIDTH_DESC"/>
      <field name="@spacer" type="spacer" default="" label="" description=""/>      
	  </fieldset>
	  <fieldset name="other" label="Other options">
      <field name="@spacer" type="spacer" default="" label="" description=""/>
