      <field name="logoSlogan" size="50" type="text" default="" label="TBL_METIS_PARAMS_LOGO_SLOGAN" description="TBL_METIS_PARAMS_LOGO_SLOGAN_DESC"/>
      <field name="@spacer" type="spacer" default="" label="" description=""/>
      <field name="gototop" type="radio" size="50" default="0" label="TBL_DISPLAY_GOTOTOP" description="TBL_DISPLAY_GOTOTOP_DESC">
        <option value="1">TBL_DISPLAY_GOTOTOP1</option>
        <option value="0">TBL_DISPLAY_GOTOTOP2</option>
      </field>
      <field name="@spacer" type="spacer" default="" label="" description=""/>
      <field name="componentheading" type="list" default="H1" label="TBL_METIS_PARAMS_COM_HEADING" description="TBL_METIS_PARAMS_COM_HEADING_DESC">
        <option value="h1">H1</option>
        <option value="h2">H2</option>
        <option value="h3">H3</option>
      </field>
      <field name="contentheading" type="list" default="H2" label="TBL_METIS_PARAMS_CONTENT_HEADING" description="TBL_METIS_PARAMS_CONTENT_HEADING_DESC">
        <option value="h1">H1</option>
        <option value="h2">H2</option>
        <option value="h3">H3</option>
      </field>
      <field name="textalign" type="list" default="LTR" label="TBL_METIS_PARAMS_ALIGN" description="TBL_METIS_PARAMS_ALIGN_DESC">
        <option value="LTR">TBL_METIS_PARAMS_ALIGN_VAL_1</option>
        <option value="RTL">TBL_METIS_PARAMS_ALIGN_VAL_2</option>
      </field>
      </fieldset>
    </fields>
